<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<BorderPane fx:controller="dev.lpa.udemy422hboxlayout.HelloController"
            xmlns:fx="http://javafx.com/fxml">
    <top>
        <StackPane style="-fx-background-color: lightblue;">
            <Label text="Top Area"/>
        </StackPane>
    </top>
    <left>
        <VBox style="-fx-background-color: lightgreen;">
            <Label text="Left Area"/>
        </VBox>
    </left>
    <center>
        <StackPane style="-fx-background-color: lightgray;">
            <Label text="Center Area"/>
        </StackPane>
    </center>
    <right>
        <VBox style="-fx-background-color: lightcoral;">
            <Label text="Right Area"/>
        </VBox>
    </right>
    <bottom>
        <HBox spacing="10" alignment="TOP_RIGHT" style="-fx-background-color: lightyellow;">
            <padding>
                <Insets bottom="10" right="10"/>
            </padding>
            <Button text="Okay" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>
        </HBox>
    </bottom>
</BorderPane>